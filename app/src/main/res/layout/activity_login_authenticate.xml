<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".login_authenticate">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Registration"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="@string/registration"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:autofillHints=""
                android:background="@drawable/auth_points"
                android:backgroundTint="#40E4DFDF"
                android:fontFamily="serif"
                android:gravity="center"
                android:hint="Enter Name"
                android:inputType="textPersonName"
                android:textColorHint="#616161"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/branch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:autofillHints=""
                android:background="@drawable/auth_points"
                android:backgroundTint="#40E4DFDF"
                android:fontFamily="serif"
                android:gravity="center"
                android:hint="Enter Branch"
                android:inputType="textPersonName"
                android:textColorHint="#616161"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/year"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:autofillHints=""
                android:background="@drawable/auth_points"
                android:backgroundTint="#40E4DFDF"
                android:fontFamily="serif"
                android:gravity="center"
                android:hint="Enter Year"
                android:inputType="textPersonName"
                android:textColorHint="#616161"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/Roll_No"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:autofillHints=""
                android:background="@drawable/auth_points"
                android:backgroundTint="#40E4DFDF"
                android:ems="10"
                android:fontFamily="serif"
                android:gravity="center"
                android:hint="Enter College Roll No"
                android:inputType="number"
                android:textColorHint="#616161"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:autofillHints=""
                android:background="@drawable/auth_points"
                android:backgroundTint="#40E4DFDF"
                android:ems="10"
                android:fontFamily="serif"
                android:gravity="center"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColorHint="#616161"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:autofillHints=""
                android:background="@drawable/auth_points"
                android:backgroundTint="#40E4DFDF"
                android:ems="10"
                android:fontFamily="serif"
                android:gravity="center"
                android:hint="Create Password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColorHint="#616161"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/Phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/auth_points"
                android:backgroundTint="#40E4DFDF"
                android:ems="10"
                android:fontFamily="serif"
                android:gravity="center"
                android:hint="Enter Phone No"
                android:importantForAutofill="no"
                android:inputType="number|phone"
                android:padding="15dp"
                android:textColorHint="#616161"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck,TextContrastCheck" />

            <Button
                android:id="@+id/loggedin"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bg_icons"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="@string/submit"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/alreadylogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Already Registered? Sign In"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>